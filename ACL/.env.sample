# Django
DJANGO_SECRET_KEY=change-me
DJANGO_DEBUG=True
DJANGO_ALLOWED_HOSTS=127.0.0.1,localhost

# Database 
DB_ENGINE=
DB_NAME=auth
DB_USER=
DB_PASSWORD=
DB_HOST=
DB_PORT=

# Redis
# If REDIS_URL is empty, parts below are used
REDIS_URL=
REDIS_HOST=127.0.0.1
REDIS_PORT=6379
REDIS_DB=0
REDIS_USERNAME=
REDIS_PASSWORD=

# Sessions
# DJANGO_SESSION_ENGINE=django.contrib.sessions.backends.cache
DJANGO_SESSION_ENGINE=django.contrib.sessions.backends.db
# JWT
JWT_ACCESS_SECRET=${DJANGO_SECRET_KEY}
JWT_ACCESS_TOKEN_LIFETIME_SECONDS=900

# ACL/Admin
ACL_ENABLED=True
ACL_CACHE_TTL=3600
ACL_ENDPOINT_APP=utils
ACL_ENDPOINT_MODEL=Endpoint
ADMIN_API_PREFIX=/api/admin/
ADMIN_LOGIN_ATTEMPT_LIMIT=5
ADMIN_LOGIN_BLOCK_SECONDS=300
ADMIN_RATE_LIMIT_REQUESTS=180
ADMIN_RATE_LIMIT_WINDOW_SECONDS=60
ADMIN_SESSION_ONLY_AUTH=True

# Metrics
ACL_METRIC_DEFAULT_TTL=3600
